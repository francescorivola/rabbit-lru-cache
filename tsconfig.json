{
    "include": [
        "./src/**/*.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "noImplicitAny": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "build",
        "watch": false,
        "lib": [
            "es2018"
        ],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "strict": true
    }
}
