{
    "include": ["./src/**/*.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "noImplicitAny": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "build",
        "lib": ["es2020"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "strict": true
    }
}
